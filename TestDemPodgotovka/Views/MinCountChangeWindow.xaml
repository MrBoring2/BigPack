<Window x:Class="TestDemPodgotovka.Views.MinCountChangeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestDemPodgotovka.Views" ResizeMode="NoResize"
        mc:Ignorable="d"
        Title="Изменение минимальноего количества"  Height="206.789" Width="455.744" Icon="/TestDemPodgotovka;component/Resources/Images/Большая пачка.ico" RenderOptions.BitmapScalingMode="HighQuality">
    <Grid>
        <TextBlock Text="Введите минимальное количество для материалов" Margin="5,40,5,65"  VerticalAlignment="Center"/>
        <TextBox Text="{Binding Count, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="5,30,5,5"/>
        <Button x:Name="ok" Content="ОК" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Bottom" Width="75" Click="ok_Click"/>
        <Button x:Name="cancel" Content="Отмена" HorizontalAlignment="Right" Margin="5" VerticalAlignment="Bottom" Width="75" Click="cancel_Click"/>
    </Grid>
</Window>
